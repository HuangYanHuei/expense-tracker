<h4 class="mb-1 mt-5 record-show-title text-center">請修改你的支出</h4>
<div class="container">
  <form action="/records/{{records._id}}?_method=PUT" method="POST">

    <div class="row mt-5">
      <label for="name" class="col-sm-5 col-form-label text-end">名稱<span class="text-danger">*</span>：</label>
      <div class="col-sm-7">
        <input type="text" class="form-control" id="name" name="name" value="{{ records.name }}" style="width:35%;"
          required />
      </div>
    </div>

    <div class="row mt-5">
      <label for="date" class="col-sm-5 col-form-label text-end">日期<span class="text-danger">*</span>：</label>
      <div class="col-sm-7">
        <input type="date" class="form-control" id="date" name="date" value="{{ records.date }}" style="width:35%;"
          required />
      </div>
    </div>

    <div class="row mt-5">
      <p class="col-sm-5 col-form-label text-end">種類<span class="text-danger">*</span>：</p>
      <div class="col-sm-7">
        <select class="form-select" aria-label="Default select" style="width:35%">
          <option selected>select</option>
          <option href="?value=家居物業">家居物業</option>
          <option href="?value=交通出行">交通出行</option>
          <option href="?value=休閒娛樂">休閒娛樂</option>
          <option href="?value=餐飲食品">餐飲食品</option>
          <option href="?value=其他">其他</option>
        </select>
      </div>
    </div>

    <div class="row mt-5">
      <label for="amount" class="col-sm-5 col-form-label text-end">金額<span class="text-danger">*</span>：</label>
      <div class="col-sm-7">
        <input type="text" class="form-control" id="amount" name="amount" value="{{ records.amount }}"
          style="width:35%;" required />
      </div>
    </div>

    <div class="text-center mt-5">
      <button type="submit" class="btn btn-primary">
        送出
      </button>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary">
          返回首頁
        </button>
      </a>
    </div>
  </form>
</div>