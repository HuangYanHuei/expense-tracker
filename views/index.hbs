<select class="form-select form-select-index mb-3" aria-label="Default select example">
  <option selected>select</option>
  <option value="家居物業">家居物業</option>
  <option value="交通出行">交通出行</option>
  <option value="休閒娛樂">休閒娛樂</option>
  <option value="餐飲食品">餐飲食品</option>
  <option value="其他">其他</option>
</select>

<p class="index-total">總金額：</p>
<ul class="list-group">
  {{#each records}}
  <li class=" list-group-item" id="index-list">
    {{this.name}} {{this.date}} {{this.amount}}
    <div class="text-end">
      <a href="/records/{{ this._id }}/edit" method="POST" class="btn btn-warning btn-sm">edit</a>
      <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
        <button class="btn btn-danger btn-sm" type="submit">delete</button>
      </form>
    </div>
  </li>
  {{/each}}
</ul>

<a href="/records/new"><button class="btn btn-primary text-center mt-3" id="index-add">新增支出</button></a>